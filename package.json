{
  "name": "link-to-title-share",
  "version": "1.0.0",
  "main": "src/main.tsx",
  "type": "module",
  "scripts": {
    "dev": "npm run css-modules -- --watch & vite",
    "build": "npm run css-modules && tsc && vite build",
    "preview": "vite preview",
    "start": "npm run dev",
    "deploy": "npm run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "css-modules": "npx happy-css-modules src/**/*.module.css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "description": "A generic PWA for extracting titles from URLs and sharing them to social media.",
  "keywords": [
    "pwa",
    "url",
    "title",
    "share",
    "web-share-api",
    "social-media",
    "typescript",
    "vite"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/username/link-to-title-share.git"
  },
  "homepage": "https://username.github.io/link-to-title-share/",
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.9",
    "@eslint/js": "^9.27.0",
    "@tsconfig/strictest": "^2.0.5",
    "@tsconfig/vite-react": "^6.3.5",
    "@types/node": "^22.15.26",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.5.0",
    "eslint": "^9.27.0",
    "eslint-import-resolver-typescript": "^4.4.1",
    "eslint-plugin-import-x": "^4.13.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "happy-css-modules": "^4.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.0"
  }
}
